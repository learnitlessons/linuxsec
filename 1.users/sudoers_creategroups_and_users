# Create groups for different administrative roles:
sudo groupadd webadmins
sudo groupadd dbadmins
sudo groupadd backupadmins
# Create users for each role:
sudo usermod -aG webadmins webuser
sudo usermod -aG dbadmins webuser
sudo usermod -aG backupadmins webuser 
# Set simple passwords for testing:
echo "webuser:123" | sudo chpasswd
echo "dbuser:123" | sudo chpasswd  
echo "backupuser:123" | sudo chpasswd
